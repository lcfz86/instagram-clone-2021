<section class='user-setting'>
  <h1>User profile setting</h1>

  <%= form_with(model: @user) do |f| %>
    <%= f.file_field :avatar %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date %>
    <%= f.submit 'Save' %>
  <% end %>
</section>
